package Ejercicio_9;

public class Laptop extends Computadora{
	
	public Laptop(String procesadorx, int ramX, int almacenamientoX) {
		super(procesadorx, almacenamientoX, ramX);
	}
	
	//Implementacion de los metodos ABSTRACTOS
	//Encender
	@Override
	public void encender() {
        if (!encendida) {
            encendida = true;
            System.out.println("La laptop se est치 encendiendo...");
        } else {
            System.out.println("La laptop ya est치 encendida.");
        }
    }
	//Apagar
	@Override
    public void apagar() {
        if (encendida) {
            encendida = false;
            System.out.println("La laptop se est치 apagando...");
        } else {
            System.out.println("La laptop ya est치 apagada.");
        }
    }

    // Mmostrar estado actual
    public void mostrarEstado() {
        if (encendida) {
            System.out.println("Estado: ENCENDIDA");
        } else {
            System.out.println("Estado: APAGADA");
        }
    }
}
